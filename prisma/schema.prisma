// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  engineType    = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Foo {
  id   Int     @id @default(autoincrement())
  name String?
}

model Client {
  id               String   @id @default(uuid())
  name             String
  website          String?
  industry         String?
  companySummary   String?  @map("company_summary")
  targetCustomer   String?  @map("target_customer")
  valueProposition String?  @map("value_proposition")
  location         String?
  headcount        Int?
  linkedinUrl      String?  @map("linkedin_url")
  twitterUrl       String?  @map("twitter_url")
  calendarUrl      String   @map("calendar_url") @default("https://cal.com")
  enrichmentStatus String?  @default("completed") @map("enrichment_status") // pending, enriching, completed, failed
  enrichmentError  String?  @map("enrichment_error")
  
  // Brand Analysis Fields
  primaryColors    String[] @default([]) @map("primary_colors")
  secondaryColors  String[] @default([]) @map("secondary_colors")
  designStyle      String?  @map("design_style")
  layoutType       String?  @map("layout_type")
  visualTone       String?  @map("visual_tone")
  toneOfVoice      String?  @map("tone_of_voice")
  brandPersonality String[] @default([]) @map("brand_personality")
  
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  marketingMaterials MarketingMaterial[]
  logosAndBranding   LogoAndBranding[]
  testimonials       Testimonial[]
  featureOrServices  FeatureOrService[]
  leads              Lead[]

  @@map("clients")
}

model FeatureOrService {
  id          String   @id @default(uuid())
  clientId    String   @map("client_id")
  title       String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("feature_or_service")
}

model MarketingMaterial {
  id              String   @id @default(uuid())
  clientId        String   @map("client_id")
  url             String
  title           String
  description     String?
  assetType       String   @map("asset_type") // e.g., "blog_post", "youtube_video", "case_study", etc.
  previewImageUrl String?  @map("preview_image_url")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("marketing_materials")
}

model Testimonial {
  id        String   @id @default(uuid())
  clientId  String   @map("client_id")
  name      String
  title     String
  quote     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("testimonial")
}

model LogoAndBranding {
  id        String   @id @default(uuid())
  clientId  String   @map("client_id")
  url       String // Points to publicly hosted logo, wordmark, etc.
  assetType String?  @map("asset_type") // e.g., "logo", "wordmark", "icon", etc.
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("logos_and_branding")
}

model Lead {
  id               String   @id @default(uuid())
  clientId         String   @map("client_id")
  linkedinSlug     String   @map("linkedin_slug")
  enrichmentData   Json?    @map("enrichment_data") // Stores unstructured enrichment data as JSON blob
  lastStep         String?  @map("last_step") // enrichment_started, enrichment_completed, enrichment_failed, research_started, research_completed, research_failed
  researchResult   String?  @map("research_result") @db.Text // Stores the markdown research report
  triggerRunId     String?  @map("trigger_run_id") // Stores the Trigger.dev run ID for real-time tracking
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  enrichmentStatus String?  @default("completed") @map("enrichment_status") // pending, enriching, completed, failed

  client Client     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  assets LeadAsset[]

  @@map("leads")
}

model LeadAsset {
  id        String   @id @default(uuid())
  leadId    String   @map("lead_id")
  type      String   // "message" or "landing_page"
  content   String   @db.Text // The message content or landing page URL
  name      String   // Variable name for customer's email tool (e.g., "initial_outreach_subject")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@map("lead_assets")
}
